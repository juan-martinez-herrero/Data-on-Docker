version: "3.7"

services:
  cassandra:
    image: juanmartinez/cassandra:<%= version %>
    container_name: cassandra
    hostname: cassandra
    env_file:
      - ./cassandra.env

  hoster:
    image: juanmartinez/docker-hoster
    container_name: hadoop_hoster
    hostname: hadoop_hoster
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock
      - /etc/hosts:/tmp/hosts
